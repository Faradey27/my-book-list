{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "outDir": "build/extracted",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": false,
    "resolveJsonModule": true,
    "jsx": "react-native",
    "skipLibCheck": true,
    "baseUrl": ".",
    "typeRoots": [
      "src/@types",
      "./node_modules/@types"
    ],
    "types": ["node", "jest"],
    "lib": [
      "dom",
      "es2015",
      "es2016"
    ]
  },
  "include": [
    "src/**/*.json",
    "src/**/*.js",
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "./__test__"
  ]
}
