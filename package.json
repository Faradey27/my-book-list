{
  "name": "my-book-list",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test:ci": "CI=true npm test -- --coverage",
    "test:e2e": "jest -c ./jest.e2e.config.json --detectOpenHandles -i --forceExit"
  },
  "dependencies": {
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "react-scripts": "2.1.1"
  },
  "devDependencies": {
    "@types/enzyme": "^3.1.15",
    "@types/jest": "^23.3.9",
    "@types/node": "^10.12.10",
    "@types/puppeteer": "^1.10.1",
    "@types/react": "^16.7.7",
    "@types/react-dom": "^16.0.11",
    "cross-env": "^5.2.0",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.7.0",
    "enzyme-to-json": "^3.3.4",
    "jest-dev-server": "^3.5.2",
    "puppeteer": "^1.11.0",
    "ts-jest": "^23.10.5",
    "typescript": "^3.1.6"
  },
  "jest": {
    "coverageReporters": [
      "lcov"
    ],
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.ts",
      "<rootDir>/src/**/*.tsx",
      "!<rootDir>/src/index.tsx",
      "!<rootDir>/src/**/*.d.ts",
      "!<rootDir>/src/**/*.e2e.ts",
      "!<rootDir>/src/**/*.e2e.driver.ts",
      "!<rootDir>/node_modules/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
