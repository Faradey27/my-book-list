{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "typeRoots": [
      "src/@types",
      "./node_modules/@types"
    ],
    "types": ["node", "jest"],
    "lib": [
      "es2015",
      "es2016"
    ]
  },
  "include": [
    "src/**/*.json",
    "src/**/*.js",
    "src/**/*.ts"
  ],
  "exclude": [
    "./__test__"
  ]
}
